<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".fragment.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_178mdp"
        android:backgroundTint="@color/secondary_text"
        app:cardElevation="@dimen/_3mdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_6mdp">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_8mdp"
                android:fontFamily="@font/fredokaone_regular"
                android:text="Your Profile"
                android:textAlignment="center"
                android:textColor="@color/light_white"
                android:textSize="@dimen/_20font_mdp" />

            <LinearLayout
                android:id="@+id/pd_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginTop="@dimen/_15mdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_68mdp"
                    android:layout_height="@dimen/_64mdp"
                    android:src="@drawable/ic_user"
                    app:civ_border_width="2dp"
                    android:padding="@dimen/_2mdp"
                    app:civ_border_color="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:fontFamily="@font/heavy"
                        android:text="Dipsankar Manna"
                        android:paddingEnd="@dimen/_5mdp"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_15font_mdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_below="@+id/header"
                        android:fontFamily="@font/heavy"
                        android:text="mannadipsankar1234@gmail.com"
                        android:paddingEnd="@dimen/_5mdp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/light_white"
                        android:textSize="@dimen/_12font_mdp" />
                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="@dimen/_30mdp"
                            android:layout_height="@dimen/_25mdp"
                            android:src="@drawable/ic_edit"
                            android:padding="@dimen/_3mdp"
                            app:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60mdp"
        android:layout_below="@id/topCard"
        android:layout_marginHorizontal="@dimen/_18mdp"
        android:layout_marginTop="-35dp"
        app:cardElevation="@dimen/_3mdp"
        app:cardCornerRadius="@dimen/_7mdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_5mdp"
            android:paddingVertical="@dimen/_4mdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13font_mdp"
                    android:gravity="center"
                    android:textColor="@color/light_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Followers"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/heavy"
                    android:textSize="@dimen/_13font_mdp"
                    android:textStyle="bold" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/_2mdp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_7mdp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_3mdp"
                android:background="@color/secondary_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="0"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13font_mdp"
                    android:gravity="center"
                    android:textColor="@color/light_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Following"
                    android:fontFamily="@font/heavy"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13font_mdp"
                    android:gravity="center"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
