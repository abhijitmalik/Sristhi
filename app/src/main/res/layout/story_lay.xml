<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_112mdp"
    android:layout_height="@dimen/_115mdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_9mdp"
    android:backgroundTint="@color/green_light"
    android:layout_marginStart="@dimen/_5mdp"
    android:layout_marginVertical="@dimen/_3mdp"
    app:cardElevation="@dimen/_3mdp">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_111mdp"
        android:layout_height="@dimen/_114mdp"
        app:cardCornerRadius="@dimen/_9mdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imv_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/story3"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_StoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingVertical="@dimen/_3mdp"
            android:paddingHorizontal="@dimen/_5mdp"
            android:text="@string/alice_a_curious_child"
            android:textSize="@dimen/_10font_mdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/orange_light"
            android:background="@color/light_white"
            android:fontFamily="@font/heavy"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>