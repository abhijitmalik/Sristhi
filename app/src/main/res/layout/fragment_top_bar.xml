<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_3mdp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_43mdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_HeaderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10mdp"
            android:fontFamily="@font/fredoka_one"
            android:text="@string/app_name"
            android:textSize="@dimen/_20font_mdp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_HeaderSearch"
            android:visibility="visible"
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_toStartOf="@id/tv_Header_menu"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20mdp"
            android:src="@drawable/ic_search" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/tv_Header_menu"
            android:visibility="visible"
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10mdp"
            android:paddingVertical="@dimen/_3mdp"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>