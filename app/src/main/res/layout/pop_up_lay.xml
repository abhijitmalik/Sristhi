<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_5mdp"
    app:cardCornerRadius="@dimen/_10mdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100mdp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="@dimen/_110mdp"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_status"
                android:layout_width="@dimen/_110mdp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_success"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_7mdp"
            android:fontFamily="@font/fredokaone_regular"
            android:gravity="center"
            android:text="Story uploaded successfully!"
            android:textSize="@dimen/_15font_mdp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/_6mdp"
            android:layout_marginEnd="@dimen/_10mdp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/fredokaone_regular"
            android:text="OK"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>